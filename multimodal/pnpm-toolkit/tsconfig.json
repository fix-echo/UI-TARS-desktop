{
  "include": [
    "src",
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@multimodal/*": [
        "packages/*/src"
      ]
    }
  }
}